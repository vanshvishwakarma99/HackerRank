#include <stdio.h>
#include <stdlib.h>

typedef struct {
    int serve_time;
    int customer_num;
} Order;

int cmp(const void *a, const void *b) {
    Order *o1 = (Order *)a;
    Order *o2 = (Order *)b;
    if (o1->serve_time != o2->serve_time)
        return o1->serve_time - o2->serve_time;
    return o1->customer_num - o2->customer_num;
}

int main() {
    int n;
    scanf("%d", &n);
    Order orders[n];
    for (int i = 0; i < n; i++) {
        int order_num, prep_time;
        scanf("%d %d", &order_num, &prep_time);
        orders[i].serve_time = order_num + prep_time;
        orders[i].customer_num = i + 1;
    }
    qsort(orders, n, sizeof(Order), cmp);
    for (int i = 0; i < n; i++) {
        printf("%d", orders[i].customer_num);
        if (i != n - 1) printf(" ");
    }
    printf("\n");
    return 0;
}
